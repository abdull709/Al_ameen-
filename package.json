{
  "name": "political-campaign-website",
  "version": "1.0.0",
  "description": "A modern, responsive political campaign website built with HTML, CSS, and JavaScript",
  "main": "index.html",
  "scripts": {
    "start": "npx http-server . -p 3000 -o",
    "dev": "npx live-server --port=3000 --open=/",
